.single__container
  %header.single__header
    %h1.logo
      = link_to root_path do
        = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2651893653", class: "logo__image"
    %nav.signup-bar
      %ol.clearfix.progress-bar
        %li.active
          会員情報
          .progress-bar__status.progress-bar__status--first
        %li.active
          電話番号認証
          .progress-bar__status
        %li.active.active-last
          お届け先住所入力
          .progress-bar__status
        %li
          支払い方法
          .progress-bar__status
        %li
          完了
          .progress-bar__status.progress-bar__status--last
  %main.single__main
    %section.l-single__container
      %h2.l-single__head.registration お届け先住所入力
      = form_with model: @address, url: address_signup_index_path, class: "l-single__inner", method: :post, local: true do |f|
        .l-single__content
          .form__group
            %div
              = f.label :last_name, "お名前(全角)"
              %span.form__require 必須
            = f.text_field :last_name, class: "input-default half", placeholder: "例) 高野"
            = f.text_field :first_name, class: "input-default half", placeholder: "例) 和樹"
          .form__group
            %div
              = f.label :nicklast_name_kananame, "お名前(全角)"
              %span.form__require 必須
            = f.text_field :last_name_kana, class: "input-default half", placeholder: "例) タカノ"
            = f.text_field :first_name_kana, class: "input-default half", placeholder: "例) カズキ"
          .form__group
            %div
              = f.label :phone_number, "郵便番号"
              %span.form__require 必須
            = f.text_field :postal_code, class: "input-default half", placeholder: "例) 123-4567"
          .form__group
            = f.label :prefecture, "都道府県"
            %span.form__require 必須
            .select-wrap
              -# = fa_icon "chevron-down", class: "icon-arrow-bottom"
              = f.collection_select :prefecture, Prefecture.all, :id, :name, prompt: "---", class: "select-default"
          .form__group
            = f.label :city_name, "市区町村"
            %span.form__require 必須
            = f.text_field :city_name, class: "input-default", placeholder: "例) 横浜市緑区"
          .form__group
            = f.label :block_number, "番地"
            %span.form__require 必須
            = f.text_field :block_number, class: "input-default", placeholder: "例) 青山1-1-1"
          .form__group
            = f.label :building_name, "建物名"
            %span.form__any 任意
            = f.text_field :building_name, class: "input-default", placeholder: "例) 柳ビル103"
          .form__group
            = f.label :phone_number, "電話番号"
            %span.form__any 任意
            = f.telephone_field :phone_number, class: "input-default", placeholder: "例) 09012345678"
          %button.btn-default.btn-red{type: "submit"} 次へ進む
  = render partial: "iFooter"